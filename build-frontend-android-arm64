#!/usr/bin/env bash
set -euo pipefail

echo -ne '\033]0;FRONTEND-ANDROID-ARM64\007'

OLDPWD="$PWD"
BUILDDIR="$PWD/dist-android-arm64"
mkdir -p "$BUILDDIR"
CABAL_FILE="$(nix-build --no-out-link -A androidSOs.arm64-v8a.hsApp.cabalFile --show-trace)"
TMPDIR="$(mktemp -d 2>/dev/null || mktemp -d -t frontend-android-arm64)"
function cleanup {
  rm -rf "$TMPDIR"
}
trap cleanup EXIT

nix-shell --show-trace -A androidSOs.arm64-v8a.hsApp --run "
cd "$TMPDIR"
shopt -s nullglob
ln -s "$OLDPWD"/{common,frontend}/src{,-bin}/* .
ln -s "$OLDPWD"/focus/cross-android/hs/cbits .
shopt -u nullglob
ln -s "$BUILDDIR" dist
"'
function setupCompilerEnvironmentPhase {
  eval "$setupCompilerEnvironmentPhase"
}
setupCompilerEnvironmentPhase
function compileBuildDriverPhase {
  eval "$compileBuildDriverPhase"
}
compileBuildDriverPhase
eval "$configurePhase"
set -e
eval "$(echo "$buildPhase" | sed '\''s/Setup build /Setup build /'\'')"
'
